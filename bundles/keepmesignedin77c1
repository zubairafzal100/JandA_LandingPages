var salt="KeepMeSignedIn",KeepMeSignedIn=function(){return self.storeCredentials=function(n,t,i,r="username",u="pass"){if($(i).is(":checked")){localStorage.setItem(r,n);var f=encodeText(t);localStorage.setItem(u,f)}else localStorage.removeItem(r),localStorage.removeItem(u)},self.deleteCredentialsIfNeeded=function(n,t,i="username",r="pass"){var u=$(n),f=$(t,u).text();f&&(localStorage.removeItem(i),localStorage.removeItem(r))},self.populateCredentials=function(n,t,i,r="username",u="pass"){var f=localStorage.getItem(r),e=localStorage.getItem(u),o;f&&e&&($(n).val(f),o=decodeText(e),$(t).val(o),$(i).prop("checked",!0))},self.decodeText=function(n){var t=n=>n.split("").map(n=>n.charCodeAt(0)),i=n=>t(salt).reduce((n,t)=>n^t,n);return n.match(/.{1,2}/g).map(n=>parseInt(n,16)).map(i).map(n=>String.fromCharCode(n)).join("")},self.encodeText=function(n){var t=n=>n.split("").map(n=>n.charCodeAt(0)),i=n=>("0"+Number(n).toString(16)).substr(-2),r=n=>t(salt).reduce((n,t)=>n^t,n);return n.split("").map(t).map(r).map(i).join("")},{storeCredentials:self.storeCredentials,deleteCredentialsIfNeeded:self.deleteCredentialsIfNeeded,populateCredentials:self.populateCredentials}}